<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/component"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="Spiderman"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/techinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/component"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="Spiderman"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/Floor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/techinfo"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="Spiderman"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/Room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Floor"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="Spiderman"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/up_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Room"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="Spiderman"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/up_date"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="Spiderman"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/Repair"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:textColor="@color/back"
        android:layout_marginLeft="5dp"
        android:background="@color/colorPrimaryDark"
        android:text="check" />
    <Button
        android:id="@+id/delete"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/Repair"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:textColor="@color/back"
        android:layout_marginLeft="5dp"
        android:background="@color/colorPrimaryDark"
        android:text="Pending" />
</RelativeLayout>