<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TechEleRepair">
    <LinearLayout
        android:id="@+id/repairLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <Spinner
            android:layout_marginTop="20dp"
            android:id="@+id/repSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/service"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/repSpinner"
            android:background="@color/back"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:id="@+id/tvblock"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:id="@+id/tvfloor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:id="@+id/tvroom"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tvroom"
            android:background="@color/back"
            />
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="10dp"
            android:text="--select Component--" />

        <ExpandableListView
            android:id="@+id/expandable_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:groupIndicator="@null"
            android:visibility="gone"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/expandable_listview"
            android:background="@color/back"
            />
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/spinnerPos"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:entries="@array/position"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/spinner2"
            android:background="@color/back"
            />
        <Button
            android:id="@+id/completed"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="completed"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/mybutton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"/>
        <!--<Button-->
            <!--android:id="@+id/pending"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="35dp"-->
            <!--android:text="pending"-->
            <!--android:layout_marginLeft="50dp"-->
            <!--android:layout_marginRight="50dp"-->
            <!--android:background="@drawable/mybutton"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginTop="15dp"/>-->
    </LinearLayout>

</LinearLayout>